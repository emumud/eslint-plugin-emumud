{
  "env": {
    "es6": true,
    "emumud/hackmud": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "no-extend-native": "error",
    "no-eval": "error",
    "no-global-assign": "error",
    "no-implied-eval": "error",
    "emumud/validate-subscript-syntax": "error",
    "emumud/no-closure-identifier": "error",
    "emumud/no-closure-siblings": "error"
  },
  "globals": {
    "logging": "readonly",

    "emumud_args": "readonly",
    "emumud_context": "readonly",

    "process": "off",
    "console": "off",

    "hardline": "readonly",
    "transpiler": "readonly",
    "npc": "readonly",
    "chat": "readonly",
    "main": "readonly"
  }
}
